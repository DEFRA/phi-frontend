{% extends 'layouts/page.njk' %}

{% block beforeContent %}
{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

{{ govukPhaseBanner({
  tag: {
    text: getHelpSection.betaText
  },
  html: getHelpSection.betabannertext1+" "+'<a class="govuk-link" href="https://defragroup.eu.qualtrics.com/jfe/form/SV_8HNqSjLvDSGG6mG">feedback</a>'+" "+getHelpSection.betabannertext2
}) }}
  <a href="javascript: history.back()" class="govuk-back-link" type='button'>Back</a>
{% endblock %}
{% block content %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}



{% set successNotificationBannerHtml %}
  <p class="govuk-notification-banner__heading">Youâ€™ve set your cookie preferences.</p>
{% endset %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="app-cookies-page" data-module="app-cookies-page">

      {{ govukNotificationBanner({
        type: "success",
        html: successNotificationBannerHtml,
        classes: "js-cookies-page-success",
        attributes: {
          hidden: ""
        }
      }) }}

      <h1 class="govuk-heading-xl">Cookies</h1>
    <p class="govuk-body">{{paragraphs.a}}</p>

      <p class="govuk-body">{{paragraphs.b}}</p>
     
      <form class="js-cookies-page-form">

        <h2 class="govuk-heading-m">{{headings.a}}</h2>

        <p class="govuk-body">{{paragraphs.h}}</p>

        {{ govukTable({
          firstCellIsHeader: true,
          
          head: [
            { text: table1.text1 },
            { text: table1.text2},
            { text: table1.text3}
          ],
          rows: [
            [
              {text: table1.text4},
              {text: table1.text5},
              {text: table1.text6}
            ],
             [
              {text: table1.text7},
              {text: table1.text8},
              {text: table1.text6}
            ]
          ]
        }) }}

        <h2 class="govuk-heading-m">{{headings.b}}</h2>

        <p class="govuk-body">{{paragraphs.i}}</p>

        <p class="govuk-body">{{paragraphs.j}}</p>
        

        <p class="govuk-body">{{paragraphs.l}}</p>

        <ul class="govuk-list govuk-list--bullet">
          <li>{{paragraphs.m}}</li>
          <li>{{paragraphs.n}}</li>
          <li>{{paragraphs.o}}</li>
          <li>{{paragraphs.p}}</li>
          <li>{{paragraphs.q}}</li>
        </ul>
        {{ govukTable({
          firstCellIsHeader: true,
                    head: [
            { text: table2.text1 },
            { text: table2.text2 },
            { text: table2.text3 }
          ],
          rows: [
            [
              { text: "_ga" },
              { text: table2.text4 },
              { text: table2.text5 }
            ],
            [
              { text: "_ga_HVF94VF4NZ" },
              { text: table2.text7 },
              { text: table2.text8 }
            ],
             [
              { text: table2.text11 },
              { text: table2.text7 },
              { text: table2.text12 }
            ]
          ]
        }) }}

        {{ govukRadios({
          name: "cookies[analytics]",
          idPrefix: "cookies-analytics",
          fieldset: {
            legend: {
              text: headings.d,
              classes: "govuk-fieldset__legend--s"
            },
            classes: "js-cookies-page-form-fieldset",
            attributes: {
              "data-cookie-type": 'analytics',
              hidden: ""
            }
          },
          items: [
            {
              text: paragraphs.r,
              value: "yes"
            },
            {
              text: paragraphs.s,
              value: "no"
            }
          ]
        }) }} 

        {{ govukButton({
          text: paragraphs.buttonText,
          classes: "js-cookies-form-button",
          attributes: {
            hidden: ""
          }
        }) }} 
      </form>
    </div>
  </div>
</div>

{% endblock %}