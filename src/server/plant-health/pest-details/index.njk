{% extends 'layouts/page.njk' %}
{% block beforeContent %}
  {% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}

  {{ govukPhaseBanner({
  tag: {
    text: getHelpSection.betaText
  },
  html: getHelpSection.betabannertext1+" "+'<a class="govuk-link" href="https://defragroup.eu.qualtrics.com/jfe/form/SV_3fnzAvYuzyPg9cG">feedback</a>'+" "+getHelpSection.betabannertext2
}) }}
  {# todo add back link #}
  {% if page == "pestsearch" %}
   <a href="/plant-health/purpose-of-visit?whatdoyouwanttofind=pest&pestsearchQuery={{pestsearchQuery.value}}&pestFullSearchQuery={{pestFullSearchQuery.value}}&cslRef={{cslRef}}" class="govuk-back-link" type='button'>Back</a> 
{% else %}
 <a href="javascript: history.back()" class="govuk-back-link" type='button'>Back</a> 

