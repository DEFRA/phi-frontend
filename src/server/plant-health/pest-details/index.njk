{% if data.page == "pestsearch"  %}
{{data.mainContent.HeaderText5}}  {{pestsearchQuery.value | replace(")", "")  | capitalize}}</h2>
   {%else%}
{{data.mainContent.HeaderText5}}  {{data.preferredName | replace(")", "")  | capitalize}}</h2>
 {%endif%}
 <br>
