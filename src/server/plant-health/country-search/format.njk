{% extends 'layouts/page.njk' %}

{% block beforeContent %}
  <a href="/plant-health/search?searchQuery={{searchQuery.value}}&countrySearchQuery={{countrySearchQuery.value}}" class="govuk-back-link" type='button'>Back</a>
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% if error %}
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1"
      data-module="error-summary">
      <h2 class="govuk-error-summary__title" id="error-summary-title">
        There is a problem
      </h2>
      <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
          <li>
            <a href="#format">Select the format of {{plantName}} you are importing</a>
          </li>
        </ul>
      </div>
    </div>
    {% endif %}
    <form class="form" method="post">
      <div class="govuk-form-group {% if error %} govuk-form-group--error {% endif %}">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading" id="format-h1">
              Which format of {{searchQuery.value}} are you importing?
            </h1>
          </legend>

          {% if error %}
          <span id="format-error" class="govuk-error-message">
            <span class="govuk-visually-hidden">Error:</span> Select the format of {{plantName}} you are importing
          </span>
          {% endif %}
          <div class="govuk-radios" data-module="govuk-radios">
            <div class="govuk-radios__item">
              <input class="govuk-radios__input" id="format" name="format" type="radio" value="plants-for-planting">
              <label class="govuk-label govuk-radios__label" for="format">
                Plants for planting
              </label>
              <div id="signIn-item-hint" class="govuk-hint govuk-radios__hint">
                This includes seeds, dormant plants, naturally or artificially dwarfed plants, in vitro material and tubers.
              </div>
            </div>
            <div class="govuk-radios__item">
              <input class="govuk-radios__input" id="format-3" name="format" type="radio" value="produce">
              <label class="govuk-label govuk-radios__label" for="format-3">
                Produce
              </label>
              <div id="signIn-item-hint" class="govuk-hint govuk-radios__hint">
                This includes fruit, vegetables, cut flowers, grain, leaves, tubers and root and tubercle vegetables.
              </div>
            </div>
            <div class="govuk-radios__item">
              <input class="govuk-radios__input" id="format-2" name="format" type="radio" value="part-of-a-plant">
              <label class="govuk-label govuk-radios__label" for="format-2">
                Part of a plant
              </label>
              <div id="signIn-item-hint" class="govuk-hint govuk-radios__hint">
                This includes seeds, cut flowers, tubers, leafy vegetables, leaves, stems and root and tubercle vegetables.
              </div>
            </div>
            <div class="govuk-radios__item">
              <input class="govuk-radios__input" id="format-4" name="format" type="radio" value="wood">
              <label class="govuk-label govuk-radios__label" for="format-4">
                Wood
              </label>
              <div id="signIn-item-hint" class="govuk-hint govuk-radios__hint">
                This includes wood which has not kept its natural round surface, wood packaging, waste wood and coopers products.
              </div>
            </div>
            <div class="govuk-radios__item">
              <input class="govuk-radios__input" id="format-5" name="format" type="radio" value="bark">
              <label class="govuk-label govuk-radios__label" for="format-5">
                Isolated bark
              </label>
            </div>
          </div>
        </fieldset>
      </div>
      <button type="submit" class="govuk-button">
        Continue
      </button>
      <p class="govuk-heading-s">Get help with this service</p>
      <p class="govuk-body">If you have any queries or you need technical support, email <a href="mailto:planthealth.Info@apha.gov.uk" class="govuk-link">planthealth.info@apha.gov.uk</a>
      </p>
    </form>
  </div>

  {% endblock %}