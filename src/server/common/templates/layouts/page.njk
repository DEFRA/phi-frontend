{% include "partials/cookie-banner.njk" %}  
  {{ govukHeader({
    homepageUrl: "https://www.gov.uk/",
    classes: "app-header",
    containerClasses: "govuk-width-container",
    serviceName: "Check plant health information and import rules",
    serviceUrl: "/",
    useTudorCrown: true
  }) }}
{% endblock %}

{% block pageTitle %}
  {{ pageTitle }}
{% endblock %}

{% block beforeContent %}
  {% if breadcrumbs.length > 1 %}
    {{ appBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "https://www.gov.uk/help/privacy-notice",
          text: "Privacy"
        },
        {
          href: "/cookies/",
          text: "Cookies"
        },
        {
          href: "/accessibility",          
          text: "Accessibility statement"
        }
      ]
    }
  }) }}
{% endblock %}

